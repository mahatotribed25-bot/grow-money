
{
  "entities": {
    "user": {
      "title": "User",
      "description": "A user of the application.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "name": {
          "type": "string",
          "description": "The user's display name."
        },
        "walletBalance": {
          "type": "number",
          "description": "The user's wallet balance."
        },
        "totalInvestment": {
          "type": "number",
          "description": "The user's total investment."
        },
        "totalIncome": {
          "type": "number",
          "description": "The user's total income."
        },
        "referralCode": {
          "type": "string",
          "description": "The user's unique referral code."
        },
        "referredBy": {
          "type": "string",
          "description": "The UID of the user who referred this user."
        },
        "status": {
          "type": "string",
          "enum": [
            "Active",
            "Blocked"
          ],
          "description": "The status of the user's account."
        },
        "upiId": {
          "type": "string",
          "description": "The user's saved UPI ID for withdrawals."
        }
      },
      "required": [
        "uid",
        "email"
      ]
    },
    "depositRequest": {
      "title": "Deposit Request",
      "description": "A request to deposit funds into a user's wallet.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The ID of the user making the request."
        },
        "userName": {
          "type": "string",
          "description": "The name of the user making the request."
        },
        "amount": {
          "type": "number",
          "description": "The amount to deposit."
        },
        "utr": {
          "type": "string",
          "description": "The Unique Transaction Reference number for the deposit."
        },
        "status": {
          "type": "string",
          "enum": [
            "pending",
            "approved",
            "rejected"
          ],
          "description": "The status of the deposit request."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The time the request was created."
        }
      },
      "required": [
        "userId",
        "userName",
        "amount",
        "utr",
        "status",
        "createdAt"
      ]
    },
    "withdrawalRequest": {
      "title": "Withdrawal Request",
      "description": "A request to withdraw funds from a user's wallet.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The ID of the user making the request."
        },
        "userName": {
          "type": "string",
          "description": "The name of the user making the request."
        },
        "amount": {
          "type": "number",
          "description": "The amount to withdraw."
        },
        "upiId": {
          "type": "string",
          "description": "The UPI ID to send the funds to."
        },
        "status": {
          "type": "string",
          "enum": [
            "pending",
            "approved",
            "rejected"
          ],
          "description": "The status of the withdrawal request."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The time the request was created."
        }
      },
      "required": [
        "userId",
        "userName",
        "amount",
        "upiId",
        "status",
        "createdAt"
      ]
    },
    "investment": {
      "title": "Investment",
      "description": "Represents a user's investment in a plan.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The ID of the user who made the investment."
        },
        "planName": {
          "type": "string",
          "description": "The name of the investment plan."
        },
        "investmentAmount": {
          "type": "number",
          "description": "The amount invested."
        },
        "dailyIncome": {
          "type": "number",
          "description": "The daily income from the investment."
        },
        "totalReturn": {
          "type": "number",
          "description": "The total return from the investment (investment + profit)."
        },
        "startDate": {
          "type": "string",
          "format": "date-time",
          "description": "The start date of the investment."
        },
        "endDate": {
          "type": "string",
          "format": "date-time",
          "description": "The end date of the investment."
        },
        "status": {
          "type": "string",
          "enum": [
            "Active",
            "Completed"
          ],
          "description": "The status of the investment."
        },
        "lastIncomeDate": {
          "type": "string",
          "format": "date-time",
          "description": "The last date the daily income was automatically credited."
        }
      },
      "required": [
        "userId",
        "planName",
        "investmentAmount",
        "dailyIncome",
        "totalReturn",
        "startDate",
        "endDate",
        "status"
      ]
    },
    "investmentPlan": {
      "title": "Investment Plan",
      "description": "Defines a template for an investment plan that can be purchased by users.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the investment plan."
        },
        "investmentAmount": {
          "type": "number",
          "description": "The cost to purchase this plan."
        },
        "profit": {
          "type": "number",
          "description": "The daily profit from the investment."
        },
        "duration": {
          "type": "number",
          "description": "The duration of the investment in days."
        },
        "status": {
          "type": "string",
          "enum": [
            "Available",
            "Coming Soon"
          ],
          "description": "The availability status of the plan."
        }
      },
      "required": [
        "name",
        "investmentAmount",
        "profit",
        "duration",
        "status"
      ]
    },
    "loanPlan": {
      "title": "Loan Plan",
      "description": "Defines a template for a loan plan that can be requested by users.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the loan plan."
        },
        "loanAmount": {
          "type": "number",
          "description": "The amount of money disbursed to the user."
        },
        "interest": {
          "type": "number",
          "description": "The total interest to be paid."
        },
        "totalRepayment": {
          "type": "number",
          "description": "The total amount to be repaid (loan + interest)."
        },
        "duration": {
          "type": "number",
          "description": "The duration of the loan in months."
        },
        "emiOption": {
          "type": "boolean",
          "description": "Whether an EMI option is available for this loan."
        },
        "directPayOption": {
          "type": "boolean",
          "description": "Whether a direct full payment option is available."
        }
      },
      "required": [
        "name",
        "loanAmount",
        "interest",
        "totalRepayment",
        "duration"
      ]
    },
    "loanRequest": {
      "title": "Loan Request",
      "description": "A user's request for a loan.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string"
        },
        "userName": {
          "type": "string"
        },
        "planName": {
          "type": "string"
        },
        "loanAmount": {
          "type": "number"
        },
        "status": {
          "type": "string",
          "enum": [
            "pending",
            "approved",
            "rejected"
          ]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "planId": {
          "type": "string"
        }
      },
      "required": [
        "userId",
        "userName",
        "planName",
        "loanAmount",
        "status",
        "createdAt",
        "planId"
      ]
    },
    "loan": {
      "title": "Active Loan",
      "description": "An active, approved loan for a user.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string"
        },
        "planName": {
          "type": "string"
        },
        "loanAmount": {
          "type": "number"
        },
        "interest": {
          "type": "number"
        },
        "totalPayable": {
          "type": "number"
        },
        "duration": {
          "type": "number"
        },
        "startDate": {
          "type": "string",
          "format": "date-time"
        },
        "dueDate": {
          "type": "string",
          "format": "date-time"
        },
        "status": {
          "type": "string",
          "enum": [
            "Active",
            "Due",
            "Completed"
          ]
        },
        "amountPaid": {
          "type": "number"
        }
      },
      "required": [
        "userId",
        "planName",
        "loanAmount",
        "interest",
        "totalPayable",
        "duration",
        "startDate",
        "dueDate",
        "status",
        "amountPaid"
      ]
    },
    "adminSettings": {
      "title": "Admin Settings",
      "description": "Stores admin-specific settings for the application.",
      "type": "object",
      "properties": {
        "upiId": {
          "type": "string",
          "description": "The UPI ID for receiving payments."
        },
        "upiQrCodeUrl": {
          "type": "string",
          "format": "uri",
          "description": "The URL for the UPI QR code image."
        },
        "signupBonus": {
          "type": "number",
          "description": "Bonus amount for a new user signing up with a referral code."
        },
        "referralBonus": {
          "type": "number",
          "description": "Bonus amount for the referrer."
        },
        "broadcastMessage": {
          "type": "string",
          "description": "A message to be broadcast to all users on their dashboard."
        }
      }
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/user"
      },
      "description": "Stores user profile information."
    },
    "/deposits/{depositId}": {
      "schema": {
        "$ref": "#/entities/depositRequest"
      },
      "description": "Stores deposit requests from users."
    },
    "/withdrawals/{withdrawalId}": {
      "schema": {
        "$ref": "#/entities/withdrawalRequest"
      },
      "description": "Stores withdrawal requests from users."
    },
    "/users/{userId}/investments/{investmentId}": {
      "schema": {
        "$ref": "#/entities/investment"
      },
      "description": "Stores the investment plans a user has purchased."
    },
    "/investmentPlans/{planId}": {
      "schema": {
        "$ref": "#/entities/investmentPlan"
      },
      "description": "Stores the available investment plans for all users."
    },
    "/settings/admin": {
      "schema": {
        "$ref": "#/entities/adminSettings"
      },
      "description": "Stores admin-specific settings like UPI details."
    },
    "/loanPlans/{planId}": {
      "schema": {
        "$ref": "#/entities/loanPlan"
      },
      "description": "Stores available loan plans for users."
    },
    "/loanRequests/{requestId}": {
      "schema": {
        "$ref": "#/entities/loanRequest"
      },
      "description": "Stores loan requests from users."
    },
    "/users/{userId}/loans/{loanId}": {
      "schema": {
        "$ref": "#/entities/loan"
      },
      "description": "Stores active loans for a user."
    }
  }
}
