
{
  "entities": {
    "user": {
      "title": "User",
      "description": "A user of the application.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "name": {
          "type": "string",
          "description": "The user's display name."
        },
        "walletBalance": {
          "type": "number",
          "description": "The user's current wallet balance."
        },
        "totalInvestment": {
          "type": "number",
          "description": "The total amount the user has invested."
        },
        "totalIncome": {
          "type": "number",
          "description": "The total income the user has earned from investments."
        },
        "referralCode": {
          "type": "string",
          "description": "The user's unique referral code."
        },
        "referredBy": {
          "type": "string",
          "description": "The UID of the user who referred this user."
        },
        "status": {
            "type": "string",
            "enum": ["Active", "Blocked"],
            "description": "The status of the user's account."
        },
        "upiId": {
          "type": "string",
          "description": "The user's saved UPI ID for receiving withdrawals."
        },
        "panCard": {
            "type": "string",
            "description": "The user's PAN card number."
        }
      },
      "required": [
        "uid",
        "email"
      ]
    },
    "investmentPlan": {
      "title": "Investment Plan",
      "description": "Defines a template for an investment plan.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "price": {
          "type": "number"
        },
        "dailyIncome": {
          "type": "number"
        },
        "validity": {
          "type": "number",
          "description": "Duration of the plan in days."
        },
        "totalIncome": {
          "type": "number"
        },
        "finalReturn": {
          "type": "number",
          "description": "The amount returned to the user after maturity (price + totalIncome)."
        },
        "status": {
            "type": "string",
            "enum": ["Available", "Coming Soon"],
            "description": "The visibility status of the plan."
        }
      },
      "required": [
        "name",
        "price",
        "dailyIncome",
        "validity",
        "totalIncome",
        "finalReturn",
        "status"
      ]
    },
    "investment": {
      "title": "Investment",
      "description": "A user's active investment in a plan.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string"
        },
        "planName": {
          "type": "string"
        },
        "investedAmount": {
          "type": "number"
        },
        "returnAmount": {
          "type": "number"
        },
        "dailyIncome": {
          "type": "number"
        },
        "startDate": {
          "type": "string",
          "format": "date-time"
        },
        "maturityDate": {
          "type": "string",
          "format": "date-time"
        },
        "lastIncomeDate": {
            "type": "string",
            "format": "date-time"
        },
        "status": {
          "type": "string",
          "enum": [
            "Active",
            "Matured"
          ]
        }
      },
      "required": [
        "userId",
        "planName",
        "investedAmount",
        "returnAmount",
        "dailyIncome",
        "startDate",
        "maturityDate",
        "status"
      ]
    },
    "depositRequest": {
      "title": "Deposit Request",
      "description": "A user's request to deposit funds.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "amount": {
          "type": "number"
        },
        "transactionId": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": [
            "pending",
            "approved",
            "rejected"
          ]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "userId",
        "name",
        "amount",
        "transactionId",
        "status",
        "createdAt"
      ]
    },
    "withdrawalRequest": {
      "title": "Withdrawal Request",
      "description": "A user's request to withdraw funds.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "amount": {
          "type": "number"
        },
        "upiId": {
            "type": "string"
        },
        "status": {
          "type": "string",
          "enum": [
            "pending",
            "approved",
            "rejected"
          ]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "userId",
        "name",
        "amount",
        "upiId",
        "status",
        "createdAt"
      ]
    },
    "adminSettings": {
      "title": "Admin Settings",
      "description": "Stores admin-specific settings for the application.",
      "type": "object",
      "properties": {
        "adminUpi": {
          "type": "string",
          "description": "The UPI ID for users to send deposits to."
        },
        "minWithdrawal": {
          "type": "number",
          "description": "The minimum amount for a withdrawal request."
        },
        "referralBonus": {
          "type": "number",
          "description": "Bonus amount for the referrer when the referred user makes their first investment."
        }
      }
    },
    "announcement": {
      "title": "Announcement",
      "description": "A message broadcast to all users on their dashboard.",
      "type": "object",
      "properties": {
        "message": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "link": {
            "type": "string",
            "description": "An optional URL for the announcement."
        }
      },
      "required": ["message", "createdAt"]
    },
     "loanPlan": {
      "title": "Loan Plan",
      "description": "Defines a template for a loan plan.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "loanAmount": { "type": "number" },
        "interest": { "type": "number" },
        "totalRepayment": { "type": "number" },
        "duration": { "type": "number", "description": "Duration value (e.g., 10, 2, 3)." },
        "durationType": { "type": "string", "enum": ["Days", "Weeks", "Months"], "description": "The unit for the duration."},
        "emiOption": { "type": "boolean" },
        "directPayOption": { "type": "boolean" }
      },
      "required": ["name", "loanAmount", "interest", "totalRepayment", "duration", "durationType"]
    },
    "loanRequest": {
      "title": "Loan Request",
      "description": "A user's request for a loan.",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "userName": { "type": "string" },
        "planId": { "type": "string" },
        "planName": { "type": "string" },
        "loanAmount": { "type": "number" },
        "status": { "type": "string", "enum": ["pending", "approved", "rejected", "sent"] },
        "createdAt": { "type": "string", "format": "date-time" },
        "repaymentMethod": { "type": "string", "enum": ["EMI", "Direct"] }
      },
      "required": ["userId", "userName", "planId", "planName", "loanAmount", "status", "createdAt"]
    },
    "activeLoan": {
        "title": "Active Loan",
        "description": "A user's active loan.",
        "type": "object",
        "properties": {
            "userId": { "type": "string" },
            "planName": { "type": "string" },
            "loanAmount": { "type": "number" },
            "interest": { "type": "number" },
            "totalPayable": { "type": "number" },
            "duration": { "type": "number" },
            "durationType": { "type": "string", "enum": ["Days", "Weeks", "Months"]},
            "startDate": { "type": "string", "format": "date-time" },
            "dueDate": { "type": "string", "format": "date-time" },
            "status": { "type": "string", "enum": ["Active", "Due", "Completed"] },
            "amountPaid": { "type": "number" }
        },
        "required": ["userId", "planName", "loanAmount", "totalPayable", "duration", "durationType", "startDate", "dueDate", "status"]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/user"
      },
      "description": "Stores user profile information."
    },
    "/investmentPlans/{planId}": {
      "schema": {
        "$ref": "#/entities/investmentPlan"
      },
      "description": "Stores available investment plans for users."
    },
    "/users/{userId}/investments/{investmentId}": {
      "schema": {
        "$ref": "#/entities/investment"
      },
      "description": "Stores a user's active investments."
    },
    "/deposits/{depositId}": {
      "schema": {
        "$ref": "#/entities/depositRequest"
      },
      "description": "Stores user deposit requests."
    },
    "/withdrawals/{withdrawalId}": {
      "schema": {
        "$ref": "#/entities/withdrawalRequest"
      },
      "description": "Stores user withdrawal requests."
    },
    "/settings/admin": {
      "schema": {
        "$ref": "#/entities/adminSettings"
      },
      "description": "Stores admin-specific settings."
    },
    "/announcements/{announcementId}": {
        "schema": { "$ref": "#/entities/announcement"},
        "description": "Stores admin announcements for the user dashboard."
    },
    "/loanPlans/{planId}": {
      "schema": { "$ref": "#/entities/loanPlan" },
      "description": "Stores available loan plans for users."
    },
    "/loanRequests/{requestId}": {
      "schema": { "$ref": "#/entities/loanRequest" },
      "description": "Stores user loan requests."
    },
    "/users/{userId}/loans/{loanId}": {
        "schema": { "$ref": "#/entities/activeLoan" },
        "description": "Stores a user's active loans."
    }
  }
}

    