
{
  "entities": {
    "user": {
      "title": "User",
      "description": "A user of the application.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "name": {
          "type": "string",
          "description": "The user's display name."
        },
        "walletBalance": {
          "type": "number",
          "description": "The user's current wallet balance."
        },
        "totalInvestment": {
          "type": "number",
          "description": "The total amount the user has invested."
        },
        "totalIncome": {
          "type": "number",
          "description": "The total income the user has earned from investments."
        },
        "referralCode": {
          "type": "string",
          "description": "The user's unique referral code."
        },
        "referredBy": {
          "type": "string",
          "description": "The UID of the user who referred this user."
        },
        "status": {
            "type": "string",
            "enum": ["Active", "Blocked"],
            "description": "The status of the user's account."
        },
        "upiId": {
          "type": "string",
          "description": "The user's saved UPI ID for receiving withdrawals."
        },
        "panCard": {
            "type": "string",
            "description": "The user's PAN card number."
        },
        "aadhaarNumber": {
            "type": "string",
            "description": "The user's 12-digit Aadhaar card number."
        },
        "phoneNumber": {
            "type": "string",
            "description": "The user's phone number."
        },
        "kycTermsAccepted": {
            "type": "boolean",
            "description": "Indicates if the user has accepted the KYC terms and conditions for loans."
        }
      },
      "required": [
        "uid",
        "email"
      ]
    },
    "investmentPlan": {
      "title": "Investment Plan",
      "description": "Defines a template for an investment plan.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "price": {
          "type": "number"
        },
        "dailyIncome": {
          "type": "number"
        },
        "validity": {
          "type": "number",
          "description": "Duration of the plan in days."
        },
        "totalIncome": {
          "type": "number"
        },
        "finalReturn": {
          "type": "number",
          "description": "The amount returned to the user after maturity (price + totalIncome)."
        },
        "status": {
            "type": "string",
            "enum": ["Available", "Coming Soon"],
            "description": "The visibility status of the plan."
        },
        "stock": {
            "type": "number",
            "description": "Total available units of this plan."
        }
      },
      "required": [
        "name",
        "price",
        "dailyIncome",
        "validity",
        "totalIncome",
        "finalReturn",
        "status"
      ]
    },
    "investment": {
      "title": "Investment",
      "description": "A user's active investment in a plan.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string"
        },
        "planName": {
          "type": "string"
        },
        "investedAmount": {
          "type": "number"
        },
        "returnAmount": {
          "type": "number"
        },
        "dailyIncome": {
          "type": "number"
        },
        "startDate": {
          "type": "string",
          "format": "date-time"
        },
        "maturityDate": {
          "type": "string",
          "format": "date-time"
        },
        "lastIncomeDate": {
            "type": "string",
            "format": "date-time"
        },
        "status": {
          "type": "string",
          "enum": [
            "Active",
            "Matured",
            "Stopped"
          ]
        },
        "finalReturn": {
            "type": "number",
            "description": "The calculated return if a plan is stopped prematurely."
        },
        "daysActive": {
            "type": "number",
            "description": "The number of days the plan was active before being stopped."
        },
        "earnedIncome": {
            "type": "number",
            "description": "The interest earned before the plan was stopped."
        }
      },
      "required": [
        "userId",
        "planName",
        "investedAmount",
        "returnAmount",
        "dailyIncome",
        "startDate",
        "maturityDate",
        "status"
      ]
    },
    "depositRequest": {
      "title": "Deposit Request",
      "description": "A user's request to deposit funds.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "amount": {
          "type": "number"
        },
        "transactionId": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": [
            "pending",
            "approved",
            "rejected"
          ]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "userId",
        "name",
        "amount",
        "transactionId",
        "status",
        "createdAt"
      ]
    },
    "withdrawalRequest": {
      "title": "Withdrawal Request",
      "description": "A user's request to withdraw funds.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "amount": {
          "type": "number"
        },
        "upiId": {
            "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["Investment Plan", "Group Investment", "General"],
          "description": "The source of the funds being withdrawn."
        },
        "status": {
          "type": "string",
          "enum": [
            "pending",
            "approved",
            "rejected"
          ]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "gstAmount": {
            "type": "number",
            "description": "The amount of GST deducted from the withdrawal."
        },
        "finalAmount": {
            "type": "number",
            "description": "The final amount to be paid to the user after GST deduction."
        }
      },
      "required": [
        "userId",
        "name",
        "amount",
        "upiId",
        "type",
        "status",
        "createdAt",
        "gstAmount",
        "finalAmount"
      ]
    },
    "adminSettings": {
      "title": "Admin Settings",
      "description": "Stores admin-specific settings for the application.",
      "type": "object",
      "properties": {
        "adminUpi": {
          "type": "string",
          "description": "The UPI ID for users to send deposits to."
        },
        "minWithdrawal": {
          "type": "number",
          "description": "The minimum amount for a withdrawal request."
        },
        "referralBonus": {
          "type": "number",
          "description": "Bonus amount for the referrer when the referred user makes their first investment."
        },
        "withdrawalGstPercentage": {
          "type": "number",
          "description": "The percentage of GST to be deducted from withdrawal requests."
        },
        "loanPenalty": {
          "type": "number",
          "description": "Default penalty for overdue loans."
        },
        "kycGoogleFormUrl": {
            "type": "string",
            "description": "The URL for the Google Form to be used for KYC document submission."
        }
      }
    },
    "announcement": {
      "title": "Announcement",
      "description": "A message broadcast to all users on their dashboard.",
      "type": "object",
      "properties": {
        "message": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "link": {
            "type": "string",
            "description": "An optional URL for the announcement."
        }
      },
      "required": ["message", "createdAt"]
    },
     "loanPlan": {
      "title": "Loan Plan",
      "description": "Defines a template for a loan plan.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "loanAmount": { "type": "number" },
        "interest": { "type": "number" },
        "tax": { "type": "number" },
        "totalRepayment": { "type": "number" },
        "duration": { "type": "number", "description": "Duration value (e.g., 10, 2, 3)." },
        "durationType": { "type": "string", "enum": ["Days", "Weeks", "Months", "Years"], "description": "The unit for the duration."},
        "emiOption": { "type": "boolean" },
        "directPayOption": { "type": "boolean" }
      },
      "required": ["name", "loanAmount", "interest", "totalRepayment", "duration", "durationType"]
    },
    "loanRequest": {
      "title": "Loan Request",
      "description": "A user's request for a loan.",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "userName": { "type": "string" },
        "userUpiId": { "type": "string" },
        "planId": { "type": "string" },
        "planName": { "type": "string" },
        "loanAmount": { "type": "number" },
        "status": { "type": "string", "enum": ["pending", "approved", "rejected", "sent"] },
        "createdAt": { "type": "string", "format": "date-time" },
        "repaymentMethod": { "type": "string", "enum": ["EMI", "Direct"] }
      },
      "required": ["userId", "userName", "planId", "planName", "loanAmount", "status", "createdAt", "repaymentMethod"]
    },
    "activeLoan": {
        "title": "Active Loan",
        "description": "A user's active loan.",
        "type": "object",
        "properties": {
            "userId": { "type": "string" },
            "planName": { "type": "string" },
            "loanAmount": { "type": "number" },
            "interest": { "type": "number" },
            "totalPayable": { "type": "number" },
            "penalty": { "type": "number", "description": "Penalty applied for overdue loan." },
            "duration": { "type": "number" },
            "durationType": { "type": "string", "enum": ["Days", "Weeks", "Months", "Years"]},
            "startDate": { "type": "string", "format": "date-time" },
            "dueDate": { "type": "string", "format": "date-time" },
            "status": { "type": "string", "enum": ["Active", "Due", "Completed", "Payment Pending"] },
            "amountPaid": { "type": "number" },
            "repaymentMethod": { "type": "string", "enum": ["EMI", "Direct"] },
            "emis": {
                "type": "array",
                "description": "Array of EMI installment details if repayment is EMI.",
                "items": {
                    "type": "object",
                    "properties": {
                        "emiAmount": { "type": "number" },
                        "dueDate": { "type": "string", "format": "date-time" },
                        "status": { "type": "string", "enum": ["Pending", "Paid", "Due", "Payment Pending"] }
                    },
                    "required": ["emiAmount", "dueDate", "status"]
                }
            }
        },
        "required": ["userId", "planName", "loanAmount", "totalPayable", "duration", "durationType", "startDate", "dueDate", "status", "repaymentMethod"]
    },
    "groupLoanPlan": {
        "title": "Group Loan Plan",
        "description": "An investment opportunity for a group loan.",
        "type": "object",
        "properties": {
            "name": { "type": "string"},
            "loanAmount": { "type": "number"},
            "interest": { "type": "number" },
            "totalRepayment": { "type": "number" },
            "repaymentType": { "type": "string", "enum": ["EMI", "Monthly", "One-Time"]},
            "duration": { "type": "number" },
            "durationType": { "type": "string", "enum": ["Days", "Weeks", "Months", "Years"]},
            "amountFunded": { "type": "number"},
            "amountRepaid": { "type": "number", "default": 0 },
            "status": { "type": "string", "enum": ["Funding", "Active", "Completed"]}
        },
        "required": ["name", "loanAmount", "interest", "totalRepayment", "repaymentType", "duration", "durationType", "amountFunded", "status"]
    },
    "groupInvestment": {
        "title": "Group Investment",
        "description": "A user's investment into a group loan plan.",
        "type": "object",
        "properties": {
            "investorId": { "type": "string" },
            "investorName": { "type": "string" },
            "planId": { "type": "string" },
            "planName": { "type": "string" },
            "investedAmount": { "type": "number" },
            "amountReceived": { "type": "number", "default": 0 },
            "amountPending": { "type": "number" },
            "createdAt": { "type": "string", "format": "date-time"}
        },
        "required": ["investorId", "investorName", "planId", "planName", "investedAmount", "createdAt"]
    },
    "repayment": {
      "title": "Repayment",
      "description": "A log of a repayment made by a borrower to the admin.",
      "type": "object",
      "properties": {
        "loanPlanId": { "type": "string" },
        "amount": { "type": "number" },
        "amountDistributed": { "type": "number", "default": 0 },
        "repaymentDate": { "type": "string", "format": "date-time" },
        "status": { "type": "string", "enum": ["Pending Distribution", "Distributed"]}
      },
      "required": ["loanPlanId", "amount", "repaymentDate", "status"]
    },
    "payout": {
        "title": "Payout",
        "description": "A record of a manual payout from admin to an investor for a group loan.",
        "type": "object",
        "properties": {
            "payoutId": {"type": "string"},
            "loanPlanId": { "type": "string" },
            "investorId": { "type": "string" },
            "investorName": { "type": "string" },
            "payoutAmount": { "type": "number" },
            "payoutDate": { "type": "string", "format": "date-time"}
        },
        "required": ["loanPlanId", "investorId", "payoutAmount", "payoutDate"]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/user"
      },
      "description": "Stores user profile information."
    },
    "/investmentPlans/{planId}": {
      "schema": {
        "$ref": "#/entities/investmentPlan"
      },
      "description": "Stores available investment plans for users."
    },
    "/users/{userId}/investments/{investmentId}": {
      "schema": {
        "$ref": "#/entities/investment"
      },
      "description": "Stores a user's active investments."
    },
    "/deposits/{depositId}": {
      "schema": {
        "$ref": "#/entities/depositRequest"
      },
      "description": "Stores user deposit requests."
    },
    "/withdrawals/{withdrawalId}": {
      "schema": {
        "$ref": "#/entities/withdrawalRequest"
      },
      "description": "Stores user withdrawal requests."
    },
    "/settings/admin": {
      "schema": {
        "$ref": "#/entities/adminSettings"
      },
      "description": "Stores admin-specific settings."
    },
    "/announcements/{announcementId}": {
        "schema": { "$ref": "#/entities/announcement"},
        "description": "Stores admin announcements for the user dashboard."
    },
    "/loanPlans/{planId}": {
      "schema": { "$ref": "#/entities/loanPlan" },
      "description": "Stores available loan plans for users."
    },
    "/loanRequests/{requestId}": {
      "schema": { "$ref": "#/entities/loanRequest" },
      "description": "Stores user loan requests."
    },
    "/users/{userId}/loans/{loanId}": {
        "schema": { "$ref": "#/entities/activeLoan" },
        "description": "Stores a user's active loans."
    },
    "/groupLoanPlans/{planId}": {
        "schema": { "$ref": "#/entities/groupLoanPlan" },
        "description": "Stores group loan investment opportunities created by the admin."
    },
    "/groupLoanPlans/{planId}/investments/{investmentId}": {
        "schema": { "$ref": "#/entities/groupInvestment" },
        "description": "Stores individual investor contributions to a specific group loan plan."
    },
    "/groupLoanPlans/{planId}/repayments/{repaymentId}": {
        "schema": { "$ref": "#/entities/repayment" },
        "description": "Logs repayments made by the borrower for a specific group loan."
    },
    "/groupLoanPlans/{planId}/payouts/{payoutId}": {
        "schema": { "$ref": "#/entities/payout" },
        "description": "Logs manual payouts distributed by the admin to investors for a group loan."
    }
  }
}
