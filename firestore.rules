
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAdmin() {
      // It's better to use custom claims for roles rather than hardcoding emails.
      // For this example, we'll keep the email check.
      return request.auth.token.email == "admin@tribed.world";
    }

    // Rules for users collection
    match /users/{userId} {
      allow read, update: if isOwner(userId) || isAdmin();
      allow create: if request.auth.uid == userId;
      allow delete: if isAdmin();
    }

    // Rules for investment plans
    match /investmentPlans/{planId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    // Rules for user investments
    match /users/{userId}/investments/{investmentId} {
      // User can read their own investments.
      allow read: if isOwner(userId);
      // Investments are created via transactions, not direct writes.
      // Updates (like status to Matured) are done via transactions.
      allow create, update, delete: if isAdmin(); // Admin can manage
    }
    
    // Rules for deposit requests
    match /deposits/{depositId} {
      allow create: if isOwner(request.resource.data.userId);
      allow read: if isSignedIn() && (isOwner(resource.data.userId) || isAdmin());
      allow update: if isAdmin(); // Only admin can approve/reject
    }
    
    // Rules for withdrawal requests
    match /withdrawals/{withdrawalId} {
      allow create: if isOwner(request.resource.data.userId);
      allow read: if isSignedIn() && (isOwner(resource.data.userId) || isAdmin());
      allow update: if isAdmin(); // Only admin can approve/reject
    }

    // Rules for admin settings
    match /settings/admin {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    // Rules for announcements
    match /announcements/{announcementId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
  }
}
