
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAdmin() {
      // It's better to use custom claims for roles rather than hardcoding emails.
      // For this example, we'll keep the email check.
      return request.auth.token.email == "admin@tribed.world";
    }

    // Rules for users collection
    match /users/{userId} {
      allow read, update: if isOwner(userId) || isAdmin();
      allow create: if request.auth.uid == userId;
      allow delete: if isAdmin();
    }

    // Rules for loan plans
    match /loanPlans/{planId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    // Rules for loan requests
    match /loanRequests/{requestId} {
      // User can create and read their own requests. Admin can read any and update status.
      allow create: if isOwner(request.resource.data.userId);
      allow read: if isSignedIn() && (isOwner(request.resource.data.userId) || isAdmin());
      allow update: if isAdmin();
    }
    
    // Rules for user loans
    match /users/{userId}/loans/{loanId} {
      // User can read their own loans. Admin can manage them fully.
      allow read: if isOwner(userId);
      allow create, update, delete: if isAdmin();
    }

    // Rules for admin settings
    match /settings/admin {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
  }
}
